[ignore]
; Ignore VSCode files
.*/.history/.*
.*/.vscode/.*

[include]

[libs]

[lints]

[strict]

[options]
suppress_comment= \\(.\\|\n\\)*\\$FlowFixMe
suppress_comment= \\(.\\|\n\\)*\\$FlowIgnore
# The following is increasing the size of the allocated hash table from the default value of ~8mb to ~32mb
# https://github.com/facebook/flow/issues/3143#issuecomment-270946030
sharedmemory.hash_table_pow=21

esproposal.optional_chaining=enable

module.file_ext=.js
module.file_ext=.scss
module.file_ext=.json
module.file_ext=.graphql

module.name_mapper='.+\.s?css' -> 'CSSModule'
module.name_mapper='@storybook/addon-info' -> '<PROJECT_ROOT>/scripts/stubs/jsModuleStub.js'
module.name_mapper='^Containers' -> '<PROJECT_ROOT>/src/containers'
module.name_mapper='^Components' -> '<PROJECT_ROOT>/src/components'
module.name_mapper='^Features' -> '<PROJECT_ROOT>/src/features'
module.name_mapper='^Models' -> '<PROJECT_ROOT>/src/models'
module.name_mapper='^Services' -> '<PROJECT_ROOT>/src/applicationService'
module.name_mapper='^Clients' -> '<PROJECT_ROOT>/src/serviceClients'
module.name_mapper='^Utils' -> '<PROJECT_ROOT>/src/utils'
module.name_mapper='^Styles' -> '<PROJECT_ROOT>/src/styles'
module.name_mapper='^Lib' -> '<PROJECT_ROOT>/src/lib'
module.name_mapper='^Src' -> '<PROJECT_ROOT>/src'
module.name_mapper='^Storybook' -> '<PROJECT_ROOT>/.storybook'
module.name_mapper='^Types' -> '<PROJECT_ROOT>/src/types'
module.name_mapper='^Api' -> '<PROJECT_ROOT>/src/api'
module.name_mapper='^GameProviders' -> '<PROJECT_ROOT>/src/gameProviders'
